@model BasicCompany.Feature.Ordercloud.Models.OrdercloudUiViewModel

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

<style type="text/css">
    .AppBackground {
        background-color: #000000;
        color: lightgrey;
    }

    body {
        background-color: #000000;
    }

    .Center {
        text-align: center;
    }

    .InverseBorder {
        border-color: #808080;
        border: solid;
    }
</style>

<div class="AppBackground">
    <h1 class="Center">
        Ordercloud Experience Data Management Tool <b>(OEDM)</b>
    </h1>
    <hr />
    <div class="container">
        <p>User to show: <b>@Model.User</b></p>
        <hr />
        <p>Default(Main) Cart Id: <b>@Model.CartId</b></p>
        <hr />
        <p>Has abandoned Cart: <b>@(Model.HasAbandonedCart ? "YES": "NO")</b></p>
        <hr />
        <h3>Main Cart:</h3>
        <div class="row">
            @foreach (var lineItem in Model.Cart.LineItems)
            {
                <div class="col-3 InverseBorder">
                    <p>Line Item Id: <b>@lineItem.ID</b></p>
                    <p>Product Id: <b>@lineItem.ProductID</b></p>
                    <p>Product Name: <b>@lineItem.Product.Name</b></p>
                    <p>Quantity: <b>@lineItem.Quantity</b></p>
                </div>
            }
        </div>
    </div>
</div>
